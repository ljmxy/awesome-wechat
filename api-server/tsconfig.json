{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["node", "mocha", "koa"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.js"
  ]
}
